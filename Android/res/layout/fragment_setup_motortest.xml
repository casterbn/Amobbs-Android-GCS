<?xml version="1.0" encoding="utf-8"?>

<org.farring.gcs.view.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal">

                <org.farring.gcs.view.spinnerWheel.CardWheelHorizontalView
                    android:id="@+id/mototestThrottlePicker"
                    style="@style/missionItemDetailCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="油门比例：%" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mc_M1testBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/mc_M2testBtn"
                    android:layout_toRightOf="@+id/mc_M2testBtn"
                    android:text="电机1"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/mc_M2testBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/mc_M3testBtn"
                    android:layout_alignBottom="@+id/mc_M3testBtn"
                    android:layout_toLeftOf="@+id/mc_M3testBtn"
                    android:layout_toStartOf="@+id/mc_M3testBtn"
                    android:text="电机2"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/mc_M3testBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="电机3"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/mc_M4testBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mc_M3testBtn"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"
                    android:layout_toEndOf="@+id/mc_M3testBtn"
                    android:layout_toRightOf="@+id/mc_M3testBtn"
                    android:text="电机4"
                    android:textSize="15dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mc_M5testBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/mc_M2testBtn"
                    android:layout_toRightOf="@+id/mc_M2testBtn"
                    android:text="电机5"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/mc_M6testBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/mc_M3testBtn"
                    android:layout_alignBottom="@+id/mc_M3testBtn"
                    android:layout_toLeftOf="@+id/mc_M3testBtn"
                    android:layout_toStartOf="@+id/mc_M3testBtn"
                    android:text="电机6"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/mc_M7testBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="电机7"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/mc_M8testBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mc_M3testBtn"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"
                    android:layout_toEndOf="@+id/mc_M3testBtn"
                    android:layout_toRightOf="@+id/mc_M3testBtn"
                    android:text="电机8"
                    android:textSize="15dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</org.farring.gcs.view.CustomerScrollView>
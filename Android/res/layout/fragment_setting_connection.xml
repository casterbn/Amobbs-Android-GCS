<?xml version="1.0" encoding="utf-8"?>

<org.farring.gcs.view.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:id="@+id/ViewContainer_ConnectionType"
                style="@style/SettingViewContainer">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SettingViewTitleV"
                        android:text="@string/pref_connection_type" />

                    <TextView
                        android:id="@+id/pref_connection_param_type"
                        style="@style/SettingViewSubtitleV"
                        android:text="USB" />
                </LinearLayout>

                <ImageView style="@style/SettingViewArrow" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:id="@+id/ViewContainer_UsbBaud"
                style="@style/SettingViewContainer">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SettingViewTitleV"
                        android:text="@string/pref_baud_type" />

                    <TextView
                        android:id="@+id/pref_baud_type"
                        style="@style/SettingViewSubtitleV"
                        android:text="57600" />
                </LinearLayout>

                <ImageView style="@style/SettingViewArrow" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ViewContainer_TcpConnection"
                    style="@style/SettingViewContainer">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SettingViewTitleV"
                            android:text="@string/pref_server" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/pref_server"
                            style="@style/SettingViewSubtitleV"
                            android:singleLine="true"
                            android:text="192.168.40.100:9501" />
                    </LinearLayout>

                    <ImageView style="@style/SettingViewArrow" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ViewContainer_UdpPort"
                    style="@style/SettingViewContainer">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SettingViewTitleV"
                            android:text="@string/pref_udp_server_port" />

                        <TextView
                            android:id="@+id/pref_udp_server_port"
                            style="@style/SettingViewSubtitleV"
                            android:text="14550" />
                    </LinearLayout>

                    <ImageView style="@style/SettingViewArrow" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ViewContainer_bluetooth"
                    style="@style/SettingViewContainer">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SettingViewTitleV"
                            android:text="@string/pref_bluetooth" />

                        <TextView
                            android:id="@+id/pref_bluetooth_device_address"
                            style="@style/SettingViewSubtitleV"
                            android:text="@string/pref_forget_bluetooth_device_address" />
                    </LinearLayout>

                    <ImageView style="@style/SettingViewArrow" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</org.farring.gcs.view.CustomerScrollView>
<?xml version="1.0" encoding="utf-8"?>

<org.farring.gcs.view.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/frameClassQuadBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="四轴"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/frameClassHexaBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:text="六轴"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/frameClassOctaBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="八轴"
                    android:textSize="15dp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView style="@style/SettingCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/frameTypePlusBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/frameTypeXBtn"
                    android:layout_toRightOf="@+id/frameTypeXBtn"
                    android:text="十字"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/frameTypeXBtn"
                    style="@style/flightControlButton.Row"
                    android:layout_height="wrap_content"
                    android:text="X字"
                    android:textSize="15dp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</org.farring.gcs.view.CustomerScrollView>